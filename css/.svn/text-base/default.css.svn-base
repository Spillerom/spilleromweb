
body {
	font-family: Arial, sans-serif;
	margin:0;
	padding:0;
	position:fixed;	
	width:100%;
	height:100%;
	overflow:hidden;
	background:#242424;
	color: #ffffff;
}

a {
	color: #ffffff;
}

.status-message {
	color:green;
}

.error-message {
	color:red;
}

/* LOCALIZATION FLAGS: */
#flags-bar {
	position: absolute;
	z-index: 10;
	top: 0;
	right: 0;
	width: 100px;
	height: 13px;
}
	#flags-bar img {
		position: relative;
		float: right;
		width: 22px;
		height: 13px;
		background-color: red;
		margin-top: 10px;
		margin-right: 10px;
		border: 0;
	}


/* VIEWS: */
#about, #mail-form, #portfolio {
	position:absolute;
	width:800px;
	height:600px;
	left:50%;
	margin-left:-400px;
	background-:none;
}
	/* ABOUT VIEW: */
	#about .background, #mail-form .background, #portfolio .background {
		position:absolute;
        -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
        filter: alpha(opacity=80);
        -moz-opacity:0.8;
        -khtml-opacity: 0.8;
        opacity: 0.8;
		background-color:black;
        width:800px;
		height:600px;
	}
	#about #content, #mail-form #content, #portfolio #content {
		position:absolute;
		opacity:1;
		width:760px;
		height:560px;
		padding:20px;
		padding-top:0;
	}
		#about #content h1, #mail-form #content h1, #portfolio #content h1 {
			font-size:68px;
			color:white;
		}
		#about #content #text, #mail-form #content #text, #portfolio #content #text {
			display:inline;
			clear:left;
			color:white;
			font-size:24px;
		}

	/* PORTFOLIO VIEW: */
	#portfolio .element {
		background-color: red;
		width: 760px;
	}
		#portfolio .element .screenshots {
			position: relative;
			float: left;
			width: 480px;
			height: 320px;
		}
			#portfolio .element .screenshots img {
				position: relative;
				float: left;
			}
		#portfolio .element .description {
			position: relative;
			float: left;
		}


/* MENU: */
#manaka {
	z-index:10;
	position:absolute;
	bottom:50px;
	width:100%;
	height:60px;
	overflow:show;
}
	#manaka #background {
		position:absolute;
		width:100%;
		height:110px;
	}
	#manaka #line {
		position:absolute;
		background-color:black;
		width:100%;
		height:60px;
	}
	#manaka #menu {
		width:800px;
		height:60px;
		position:absolute;
		left:50%;
	}
	#manaka #menu #elements {
		margin-left:-400px;
	}
		#manaka #portfolio-button, #menu #contact-button {
			position:absolute;
			font-size:24px;
			margin-top:15px;
			cursor:pointer;
		}
		#manaka #portfolio-button {
			color:white;
		}
		#manaka #contact-button {
			color:white;
			margin-left:700px;
		}
	
	#manaka #company-logo-container {
		position:absolute;
		width:500px;
		height:144px;
		margin-left:50%;
		margin-top:-42px;
		display:inline;
		float:left;
		cursor:pointer;
	}
		#manaka #company-logo-container div {
			background-image:url(../data/spillerom_logo.png);
			width:500px;
			height:144px;
			margin-left:-250px;
		}
	
	#manaka #social-media-links {
		list-style:none;
		position:relative;
		left:370px;
	}
		#manaka #social-media-links li {
			display:inline;
			margin-left:5px;
			float:left;
			cursor:pointer;
		}
		#manaka #social-media-links #twitter {
			background-image:url(../data/twitter_icon.png);
			width:24px;
			height:24px;
		}
		#manaka #social-media-links #facebook {
			background-image:url(../data/facebook_icon.png);
			width:24px;
			height:24px;
		}


.sprite {
	position:fixed;
}

