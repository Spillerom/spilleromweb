	pointer-events:none;
}
	#effects #splatt {
		width:100%;
		heigth:100%;
	}
		#effects #splatt #sprite-1 {
			background-image:url(../data/effects/splash-1.png);
			width:300px;
			height:285px;
			left:30px;
			top:30px;
		}
		#effects #splatt #sprite-2 {
			background-image:url(../data/effects/splash-2.png);
			width:300px;
			height:285px;
			left:300px;
			top:300px;
		}
		#effects #splatt #sprite-3 {
			background-image:url(../data/effects/splash-1.png);
			width:300px;
			height:285px;
			right:100px;
			bottom:400px;
		}
		#effects #splatt #sprite-4 {
			background-image:url(../data/effects/splash-2.png);
			width:300px;
			height:285px;
			right:20px;
			bottom:50px;
		}
		#effects #splatt #sprite-5 {
			background-image:url(../data/effects/splash-2.png);
			width:300px;
